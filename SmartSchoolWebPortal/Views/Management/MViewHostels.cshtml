                    </div>
                </div>
            </nav>
        </div>
    </header>


    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Hostels</h2>
                            <div class="page_link">

                                <a href="#">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostelLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostelDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostelRent)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImagePath" style="width:160px;height:180px;border-radius:50%" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostelLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostelDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostelRent)
                </td>
                <td>
                    <div class="button-group-area mt-40">
                        <a href="/Management/UpdateHostel/@item.Id" class="genric-btn primary circle arrow">Update<span class="ti-arrow-right"></span></a>
                        <a href="/Management/DeleteHostel/@item.Id" onclick="return confirm('Are You Sure you want to delete this hostel?')" class="genric-btn primary circle arrow">Delete<span class="ti-arrow-right"></span></a>
                    </div>
                </td>
            </tr>
        }

    </table>

</body>



