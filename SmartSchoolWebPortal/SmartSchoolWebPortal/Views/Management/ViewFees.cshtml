@model IEnumerable<SmartSchoolWebPortal.Models.StudentFeeViewModel>

@{
    ViewBag.Title = "ViewFees";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" href="img/favicon.png" type="image/png" />
    <title>Manage Students</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/flaticon.css" />
    <link rel="stylesheet" href="css/themify-icons.css" />
    <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="vendors/nice-select/css/nice-select.css" />
    <!-- main css -->
    <link rel="stylesheet" href="css/style.css" />
</head>
<body>
    <!--================ Start Header Menu Area =================-->
    <header class="header_area white-header">
        <div class="main_menu">
            <div class="search_input" id="search_input_box">
                <div class="container">
                    <form class="d-flex justify-content-between" method="" action="">
                        <input type="text"
                               class="form-control"
                               id="search_input"
                               placeholder="Search Here" />
                        <button type="submit" class="btn"></button>
                        <span class="ti-close"
                              id="close_search"
                              title="Close Search"></span>
                    </form>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand" href="index.html">
                        <img class="logo-2" src="~/img/logo2.png" alt="" />
                    </a>
                    <button class="navbar-toggler"
                            type="button"
                            data-toggle="collapse"
                            data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="icon-bar"></span> <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset"
                         id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Management/LogOff">Log Off</a>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="#"
                                   class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">Manage Student</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/Attendance">Attendance</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/RegisterCourse">Register Course</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/STudentRequests">Register Requests</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/LeaveRequest">Leave Requests</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/ViewAllStudent">View All</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/Enrollment">EnRollMent</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/ComplaintStatus">Complaints</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/AddFee">Add Fees</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="#"
                                   class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">Manage Parents</a>
                                <ul class="dropdown-menu">

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/PTudentRequests">Register Requests</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/ViewAllParent">View All</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="#"
                                   class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">Manage Hostels</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/MAddHostels">Add Hostels</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/MViewHostels">View Hostels</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/HostelRequests">Hostels Requests</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="#"
                                   class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">News/Events</a>
                                <ul class="dropdown-menu">

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/AddNews">Add News</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/Viewnews">View News</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/AddEvents">Add Events</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/ViewEvents">Update Events</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="#"
                                   class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">Download Reports</a>
                                <ul class="dropdown-menu">

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportAllStudents">Registered Students</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportAllParents">Registered Parents</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportHostels">Hostels List</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportNews">News List</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportEvents">Events List</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportComplains">Complaints List</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Management/GenerateReportAtt">Attendance List</a>
                                    </li>
                                </ul>
                            </li>



                            <li class="nav-item">
                                <a href="#" class="nav-link search" id="search">
                                    <i class="ti-search"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->
    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Student Fee</h2>
                            <div class="page_link">

                                <a href="#">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <!--================ Start Popular Courses Area =================-->
    <div class="popular_courses section_gap_top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="main_title">
                        <h2 class="mb-3">You can View and Delete Student fee from Here!</h2>
                        <p>Student Fee for @ViewBag.Name</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================ End Popular Courses Area =================-->
    <!--================ Start List Area =================-->

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="~/Management/DeleteFee/@item.Id" onclick="return confirm('Are you sure you want to delete this?')" class="genric-btn primary circle arrow">Delete<span class="ti-arrow-right"></span></a>
                    <a href="~/Management/PayFees/@item.Id" onclick="return confirm('Are you sure this fee is paid?')" class="genric-btn primary circle arrow">Paid<span class="ti-arrow-right"></span></a>

                </td>
            </tr>
        }

    </table>
    <!--================ Start List Area =================-->
    <!--================ End Feature Area =================-->
    <!--================ Start footer Area  =================-->
    <!--================ End footer Area  =================-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="js/owl-carousel-thumb.min.js"></script>
    <script src="js/jquery.ajaxchimp.min.js"></script>
    <script src="js/mail-script.js"></script>
    <!--gmaps Js-->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
    <script src="js/gmaps.min.js"></script>
    <script src="js/theme.js"></script>
</body>
</html>





