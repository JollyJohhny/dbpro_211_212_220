    <div class="popular_courses section_gap_top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="main_title">
                        <h2 class="mb-3">Enter Information Here!</h2>
                    </div>
                </div>
            </div>
            <!--================ End Popular Courses Area =================-->
            <!--================ Start Registration Area =================-->
            <div class="section_gap registration_area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-7">
                            <div class="row clock_sec clockdiv" id="clockdiv">
                                <div class="col-lg-12">
                                    <h1 class="mb-3">Note</h1>
                                    <p>
                                        Only the Information you will change will be change. Remaining will remain the same!
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-1">
                            <div class="register_form">
                                <h3>Update</h3>
                                <p>Change Information</p>
                                @using (Html.BeginForm("UpdateStudent", "Management", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    <form class="form_area"
                                          id="myForm"
                                          action="mail.html"
                                          method="post">
                                        <div class="row">
                                            <div class="col-lg-12 form_group">
                                                <input name="Name"
                                                       placeholder="New Name"
                                                       required=""
                                                       type="text" />
                                                <input name="Contact"
                                                       placeholder="New Phone Number"
                                                       required=""
                                                       type="tel" />
                                                <input name="RegisterationNumber"
                                                       placeholder="New Registeration Number"
                                                       required=""
                                                       type="text" />
                                                <input name="Email"
                                                       placeholder="New Email Address"
                                                       required=""
                                                       type="email" />
                                            </div>
                                            <div class="col-lg-12 text-center">
                                                <button class=" btn primary-btn">Update</button>
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
